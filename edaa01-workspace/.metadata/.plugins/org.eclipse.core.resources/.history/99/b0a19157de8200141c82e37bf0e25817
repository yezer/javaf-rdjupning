
import javax.swing.*;
import javax.swing.border.LineBorder;

import java.awt.*;
import java.util.*;

public class SolverGUI extends JFrame {
	private Solver solver;
//	private JFrame window;
		
	public SolverGUI(Solver solver) {
		super("Sudoku Solver");  //makes a JFrame: Frame window = new JFrame("Sudoku Solver");
		this.solver = solver;
		
		JPanel mainPanel = new JPanel();
		mainPanel.setLayout(new GridLayout(2,2));
		add(mainPanel);
	//	setLayout(new BorderLayout());
		JPanel panel = new JPanel();
		GridLayout gridLayout = new GridLayout(9,9);
		panel.setLayout(gridLayout);
		panel.setBorder(new LineBorder(Color.PINK,2)); 
		panel.setBackground(Color.BLACK);
		mainPanel.add(panel);
		
		JPanel buttonPanel = new JPanel();
		GridLayout buttonLayout = new GridLayout(1,2);
		buttonPanel.setLayout(buttonLayout);
		mainPanel.add(buttonPanel);
	
		
//		JPanel bottompanel = new JPanel();
//		add(bottompanel);
	
		for (int i = 1; i <82; i++) {
			JTextField square = new JTextField("0");
			square.setBackground(Color.RED);
			panel.add(square);
		     //   panel.add(new JTextField("i"));
		}
	
	
		
		JButton solvebutton = new JButton("Solve");
		buttonPanel.add(solvebutton);
		JButton clearbutton = new JButton("Clear");
		buttonPanel.add(clearbutton);
		
		

	
		pack();
		setVisible(true);

		}
	
	


}